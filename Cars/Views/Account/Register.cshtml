@using Cars.Utilities
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="FName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="FName" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="LName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="LName" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="Email" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="Phone" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="Phone" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="Address" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="Address" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="City" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="City" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="ZIP" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="ZIP" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="ZIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="Password" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="Password" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="ConfirmPassword" class="custom-label"></label>
                    </div>
                    <div class="col-sm-6">
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(Utility.AdminEndUser))
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <label asp-for="isAdmin" class="custom-label"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="isAdmin" type="checkbox" />
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        @if (User.IsInRole(Utility.AdminEndUser))
                        {
                            <button type="submit" class="btn btn-primary form-control"> Add customer </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control"> Register </button>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
